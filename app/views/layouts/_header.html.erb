<header class="container top">
  <div class='row'>
    <nav class='span7 offset5  user_menu'>
      <ul>
        <% if signed_in? %>
	        <li><%= current_user.name.titleize %></li>
            <li><%= link_to 'My Profile', user_path(current_user) %></li>
            <li><%= link_to 'Post a review', new_review_path %></li>
            <li><%= link_to 'Sign Out', signout_path, method: :delete %></li>
            <%= gravatar_for(current_user, size: 24) %>
      <% else %>
            <li><%= link_to 'Sign in', signin_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<div class="logo">
 <a href="/"><%= image_tag('ratespot.png', alt: 'Ratespot logo', class: 'logo') %></a>
</div>
