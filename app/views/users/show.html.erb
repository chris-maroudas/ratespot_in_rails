<h2><%= @user.name.titleize %></h2>
<h3><%= @user.email %></h3>
<p><%= pluralize(@user.reviews.count, 'review') %>
  <%= link_to 'View them', reviews_user_path(@user) %> </p>
<%= link_to 'Edit profile', edit_user_path(@user) %>
<%= link_to 'Delete my profile', users_path, method: :delete, confirm: 'Are you sure you want to delete your profile?' %>