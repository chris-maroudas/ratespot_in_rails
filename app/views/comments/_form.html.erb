<% if signed_in? %>
    <!-- Form for article comments -->
    <% unless @comment.article_id.nil? %>

        <%= form_for [@article, @comment] do |f| %>

            <%= render 'shared/error_messages', object: f.object %>

            <%= f.label "Write a comment?" %>
            <%= f.text_area :content %>

            <%= f.submit %>

        <% end %>

    <% end %>

    <!-- Form for review comments -->
    <% unless @comment.review_id.nil? %>

        <%= form_for [@review, @comment] do |f| %>

            <%= render 'shared/error_messages', object: f.object %>

            <%= f.label "Write a comment?" %>
            <%= f.text_area :content %>

            <%= f.submit %>

        <% end %>

    <% end %>

    <hr />
<% else %>
    <p>You must <%= link_to 'log in', signin_path %> to comment</p>
<% end %>