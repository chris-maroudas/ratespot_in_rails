
<!-- Form for article comments -->
<% unless @comment.article_id.nil? %>

    <%= form_for(@comment) do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :content %>
        <%= f.text_area :content %>

        <%= f.hidden_field :article_id %>

        <%= f.submit %>

    <% end %>

<% end %>

