<%= form_for(@review) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_area :content %>

    <%= f.label :category %>

    <%= f.select :category, Review::CATEGORIES.map { |category| category.titleize }, :prompt => 'Select a category' %>

    <%= f.label :product %>
    <%= f.text_field :product %>

    <%= f.label 'Rating' %>
    <%= f.radio_button :rating, 1 %> Worst thing ever
    <%= f.radio_button :rating, 2 %> Bad
    <%= f.radio_button :rating, 3 %> Average
    <%= f.radio_button :rating, 4 %> Good
    <%= f.radio_button :rating, 5 %> Excellent

    <%= f.label :image_url %>
    <%= f.text_field :image_url %>

    <%= f.submit "Send", class: "btn btn-large btn-primary" %>
<% end %>