<%= form_for(@review) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :approved %>
    <%= f.radio_button :approved, true %> Approved
    <%= f.radio_button :approved, false %> Rejected

    <%= f.submit "Send", class: "btn btn-large btn-primary" %>
<% end %>

